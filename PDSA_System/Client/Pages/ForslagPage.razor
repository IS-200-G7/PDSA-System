@page "/Forslag"
@using PDSA_System.Shared.Models
@inject HttpClient Http


<main class="content">

	<div class="container p-0">
		<h3>Forslag</h3>

		<div class="row">
			<div class="col-12 col-lg-6 col-xl-3">
				<div class="card card-border-primary">
					<div class="card-header">
						<h5 class="card-title"><b>Plan</b></h5>
					</div>
					<div class="card-body p-3">
						@foreach (var item in _forslag ?? Array.Empty<Forslag>())
						{

							if (item.Status != "plan")
							{
								continue;
							}

							Random random = new Random();
							int randomNumber = random.Next(1, 9);

							<a class="task card mb-3 bg-light" href="/">
								<div class="card-body p-3">
									<p>@item.Emne</p>
									<div class="float-right mt-n1">
										<img src="https://bootdey.com/img/Content/avatar/avatar@( randomNumber + ".png")" width="32" height="32" class="rounded-circle" alt="Avatar">
									</div>
								</div>
							</a>
						}

					</div>
				</div>
			</div>

			<div class="col-12 col-lg-6 col-xl-3">
				<div class="card card-border-warning">
					<div class="card-header">
						<h5 class="card-title"><b>Do</b></h5>
					</div>
					<div class="card-body">
						@foreach (var item in _forslag)
						{

							if (item.Status != "do")
							{
								continue;
							}

							Random random = new Random();
							int randomNumber = random.Next(1, 9);

							<a class="task card mb-3 bg-light" href="/">
								<div class="card-body p-3">
									<p>@item.Emne</p>
									<div class="float-right mt-n1">
										<img src="https://bootdey.com/img/Content/avatar/avatar@( randomNumber + ".png")" width="32" height="32" class="rounded-circle" alt="Avatar">
									</div>
								</div>
							</a>
						}
					</div>
				</div>
			</div>

			<div class="col-12 col-lg-6 col-xl-3">
				<div class="card card-border-danger">
					<div class="card-header">
						<h5 class="card-title"><b>Study</b></h5>
					</div>
					<div class="card-body">
						@foreach (var item in _forslag)
						{

							if (item.Status != "study")
							{
								continue;
							}

							Random random = new Random();
							int randomNumber = random.Next(1, 9);

							<a class="task card mb-3 bg-light" href="/">
								<div class="card-body p-3">
									<p>@item.Emne</p>
									<div class="float-right mt-n1">
										<img src="https://bootdey.com/img/Content/avatar/avatar@( randomNumber + ".png")" width="32" height="32" class="rounded-circle" alt="Avatar">
									</div>
								</div>
							</a>
						}
					</div>
				</div>
			</div>

			<div class="col-12 col-lg-6 col-xl-3">
				<div class="card card-border-success">
					<div class="card-header">
						<h5 class="card-title"><b>Act</b></h5>
					</div>
					<div class="card-body">
						@foreach (var item in _forslag)
						{

							if (item.Status != "act")
							{
								continue;
							}

							Random random = new Random();
							int randomNumber = random.Next(1, 9);

							<a class="task card mb-3 bg-light" href="/">
								<div class="card-body p-3">
									<p>@item.Emne</p>
									<div class="float-right mt-n1">
										<img src="https://bootdey.com/img/Content/avatar/avatar@( randomNumber + ".png")" width="32" height="32" class="rounded-circle" alt="Avatar">
									</div>
								</div>
							</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</main>


@code {
	private Forslag[]? _forslag;

	protected override async Task OnInitializedAsync() =>
		_forslag = await Http.GetFromJsonAsync<Forslag[]>("/api/Forslag");

}
